{
  "manifest_version": 2,
  "name": "How Long to Beat Search",
  "version": "1.0",
  "description": "Search HLTB directly from Firefox's search bar.",
  "icons": {
    "32": "icons/HLTB-Search-32.png",
    "48": "icons/HLTB-Search-48.png",
    "64": "icons/HLTB-Search-64.png",
    "128": "icons/HLTB-Search-128.png"
  },
  "permissions": ["tabs"],
  "omnibox": {
    "keyword": "@hltb"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
