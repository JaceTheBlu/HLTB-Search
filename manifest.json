{
  "manifest_version": 2,
  "name": "How Long to Beat Search",
  "license": "GPL-3.0",
  "version": "1.0",
  "description": "Search HLTB directly from Firefox's search bar.",
  "icons": {
    "32": "icons/HLTB-Search-32.png",
    "48": "icons/HLTB-Search-48.png",
    "64": "icons/HLTB-Search-64.png",
    "128": "icons/HLTB-Search-128.png"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "omnibox": {
    "keyword": "@hltb"
  },
  "browser_action": {
    "default_icon": "icons/HLTB-Search-48.png",
    "default_title": "HLTB Search",
    "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  }
}
